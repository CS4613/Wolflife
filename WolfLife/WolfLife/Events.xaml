<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="WolfLife.Events"
             Title="Events"
             BackgroundColor="#cc092f">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0">
                <Label Text="WolfFeed" TextColor="#000000" FontSize="Large"
                       FontFamily="CollegiateFLF.ttf#CollegiateFLF" Margin="10"/>
                <Label Text="Lift" TextColor="#000000" FontSize="Large"
                       FontFamily="CollegiateFLF.ttf#CollegiateFLF" Margin="10"/>
                <Label Text="Southwest Church of Christ" TextColor="#000000" FontSize="Large"
                       FontFamily="CollegiateFLF.ttf#CollegiateFLF" Margin="10"/>
                <Button Text="Take a look at our calendar!" TextColor="#000000" FontSize="Large"
                       FontFamily="CollegiateFLF.ttf#CollegiateFLF" Margin="10" Clicked="Calendar_Tapped"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>